{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PharmaStudy",
  "x-vendia-acls": {
    "patientACL": {
      "type": "Patient"
    },
    "drugACL": {
      "type": "Drug"
    }
  },
  "type": "object",
  "properties": {
    "Patient": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "patientPicture": {
            "type": "string"
          },
          "dob": {
            "type": "string"
          },
          "insuranceNumber": {
            "type": "string"
          },
          "height": {
            "type": "string"
          },
          "weight": {
            "type": "string"
          },
          "bloodPressure": {
            "type": "string"
          },
          "temperature": {
            "type": "string"
          },
          "oxygenSaturation": {
            "type": "string"
          },
          "uuid": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "currentMedications": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "medication": {
                  "type": "string"
                }
              },
              "required": [
                "medication"
              ]
            }
          },
          "familyHistory": {
            "type": "string"
          },
          "currentlyEmployed": {
            "type": "string"
          },
          "currentlyInsured": {
            "type": "string"
          },
          "icdHealthCodes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                }
              },
              "required": [
                "code"
              ]
            }
          },
          "allergies": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "allergy": {
                  "type": "string"
                }
              },
              "required": [
                "allergy"
              ]
            }
          },
          "eligibility": {
            "type": "boolean"
          },
          "placeboReciever": {
            "type": "boolean"
          },
          "currentTotalDoses": {
            "type": "integer"
          },
          "currentDoseFid": {
            "type": "string"
          },
          "visits": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "prevDoseFid": {
                  "type": "string"
                },
                "dateTime": {
                  "type": "string",
                  "format": "date-time"
                },
                "notes": {
                  "type": "string"
                },
                "hivViralLoad": {
                  "type": "string"
                }
              },
              "required": [
                "prevDoseFid",
                "dateTime",
                "hivViralLoad"
              ]
            }
          }
        },
        "required": [
          "uuid",
          "icdHealthCodes"
        ]
      }
    },
    "Drug": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "placebo": {
            "type": "boolean"
          },
          "batchNumber": {
            "type": "integer"
          },
          "bid": {
            "type": "string"
          },
          "fid": {
            "type": "string"
          },
          "patientUuid": {
            "type": "string"
          }
        },
        "required": [
          "placebo",
          "batchNumber",
          "bid"
        ]
      }
    }
  }
}